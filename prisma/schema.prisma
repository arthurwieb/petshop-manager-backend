// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  login    String
  password String

  @@map("users")
}

model Pet {
  id     Int    @id @default(autoincrement())
  name   String
  specie String
  breed  String
  age    Int
  customer PetCustomer[]

  @@map("pets")
}

model Customer {
  id    Int    @id @default(autoincrement())
  name  String
  phone String
  pet PetCustomer[]

  @@map("customers")
}


model PetCustomer {
  petId Int
  pet Pet @relation(fields: [petId], references: [id])
  customerId Int
  customer Customer @relation(fields: [customerId], references: [id])
  
  @@id([petId, customerId])
  @@map("petcustomer")
}